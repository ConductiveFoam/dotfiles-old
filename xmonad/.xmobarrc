-- -*-Haskell-*-
Config { font = "xft:Fira Code:style=Bold:size=9:antialias=true"
       , bgColor = "#002b36"
       , fgColor = "#839496"
       , position = TopW L 95
       , allDesktops = False

       , commands =
         [ Run Cpu ["-L", "15", "-H", "50", "-l", "#268bd2", "-n", "#859900", "-h", "#dc322f"] 10
         , Run Memory ["-t", "Mem: <usedratio>", "-L", "15", "-H", "50", "-l", "#268bd2", "-n", "#859900", "-h", "#dc322f"] 10
	 , Run Swap ["-L", "15", "-H", "50", "-l", "#268bd2", "-n", "#859900", "-h", "#dc322f"] 10
         , Run DynNetwork ["-t", "<dev>: <fc=#268bd2><rx></fc>;<fc=#268bd2><tx></fc>KB"] 10

	 , Run Kbd [("us(dvorak)", "DV"), ("us", "US"), ("de", "DE")]
	 , Run Date "%l:%M %p" "time" 60
	 , Run Uptime [] 60

	 , Run StdinReader
         ]
       , template = "%StdinReader% }{ %cpu% * Temp: %getcoretemp.sh% | %memory%%getgpumem.sh% * %swap% | %dynnetwork%   XSS %xssmode.sh% | %getvolume.sh% %mpcstatus.sh% | <fc=#d33682>%kbd%</fc> | <fc=#d33682>%gettime.sh% %time%</fc> * %uptime% "
    }

