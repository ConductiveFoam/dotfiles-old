# Start client only when there's a session dev and no emacs window
if [[ -z "$TMUX" ]] && \
   [[ -z $(tmux lsw -t dev -F "#W" | grep -o emacs) ]]; then
  sess=$(tmux new -dPF "#S" -t "dev")
  tmux neww -d -n "emacs" -t "dev:2"
  tmux send -t "dev:2" "emacsclient -a '' -t -e '(progn (global-display-line-numbers-mode t) \
    (switch-to-buffer \"stuff.org\") (split-window-below) (switch-to-buffer \"*scratch*\"))'" C-m
fi
